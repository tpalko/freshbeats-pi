<VirtualHost *:80>

        WSGIDaemonProcess beater user=www-data group=www-data threads=1 python-path={0}/freshbeats-pi/webapp
        WSGIScriptAlias / {0}/freshbeats-pi/webapp/config/wsgi.py

        <Directory {0}/freshbeats-pi/webapp/config>
                WSGIProcessGroup beater
                WSGIApplicationGroup {%GLOBAL%}
                Order allow,deny
                Allow from all
        </Directory>

        LogLevel debug
        ErrorLog /var/log/apache2/beater_error.log

</VirtualHost>